    "castv2-client": "^1.2.0",
    "chromecast-api": "^0.3.0",
    "essentia.js": "^0.1.3",
    "express": "^4.18.2",
    "music-metadata": "^7.14.0",
    "natural": "^6.12.0",
    "sentiment": "^5.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/music-mcp-server.git"
  },
